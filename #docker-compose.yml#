version: '2'

services:
  db:
    image: mongo:latest
    command: "--smallfiles --logpath=/dev/null"
    volumes:
      - ./data/db:/data/db    
  web:
    build: .
    working_dir: /home/vertex
    command: npm run serve
    depends_on:
      - db
    links:
      - db
    ports:
      - "3000:3000"
    volumes:
      - ./client:/home/vertex/client
      - ./server:/home/vertex/server      
    environment:
      MONGO_URL: mongodb://db:27017/vertex


